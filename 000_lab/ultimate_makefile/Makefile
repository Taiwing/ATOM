CC=gcc
CFLAGS=-g -Wall -Wextra -Werror
NAME=fillit
SRC=main.c\
	parser.c\
	solver.c\
	tetros.c\
	error.c\

OBJ=$(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ)

%.o: %.c %.h
	$(CC) -c $(CFLAGS) $<

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

america:

